{% extends 'layouts/one_column.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}

    <h1>{{ title }}</h1>

    <table class="table table-responsive">

        <tbody>
            <th>ID</th>
            <th>Name</th>
            <th>Options</th>
            {% for entity in departments %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.name }}</td>
                    <td><a href="{{ path('department_edit', {'id': entity.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
        </tbody>

    </table>

{% endblock %}